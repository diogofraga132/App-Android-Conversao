<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/TextView00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Conversão de medidas"
            android:layout_span="3"
            android:textColor="#000"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/tvValorParaConverter"
            android:hint="Milhas"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btnConverter"
            android:text="CONVERTER"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15dp"/>
    </TableRow>
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/resultKM"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="KM:"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/resultPES"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Pés:"
            android:textColor="#000000"
            android:textSize="15dp"/>

    </TableRow>
    <TextView
        android:padding="15dp"
        android:layout_height="3dp"
        android:background="#000" />
    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:padding="10dp"
            android:text="Conversão de moedas"
            android:textColor="#000"
            android:textSize="20dp" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        >

        <EditText
            android:id="@+id/etValorDollarParaConverter"
            android:hint="Dólar"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btnConverterMoedas"
            android:text="CONVERTER"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15dp"/>
    </TableRow>

    <TableRow

        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView

            android:id="@+id/tvReais"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Reais:"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tvEuros"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Euros:"
            android:textColor="#000000"
            android:textSize="15dp"/>

    </TableRow>
    <TextView
        android:padding="15dp"
        android:layout_height="3dp"
        android:background="#000" />


    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:padding="10dp"
            android:text="Calcular Tangente de um ângulo"
            android:textColor="#000"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etAngulo"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Ângulo"
            android:padding="10dp"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btnCalcularTangente"
            android:layout_weight="1"
            android:gravity="center"

            android:padding="10dp"
            android:text="CALCULA"
            android:textColor="#000000"
            android:textSize="15dp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/tvTangente"
            android:text="Tangente:"
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="15dp"/>
    </TableRow>


</TableLayout>